{# templates/formation/list.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <h1>List of Formations</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Adress</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.name }}</td>
                <td>{{ formation.adress }}</td>
                <td>{{ formation.status ? 'Active' : 'Inactive' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No formations found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Create new Formation</a>
{% endblock %}
